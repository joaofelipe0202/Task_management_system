

@Html.ActionLink("Notifications", "ShowNotificationsBy", "Notifications", new { userId = ViewBag.UserId }, htmlAttributes: new { id = "notification", @class = ViewData["className"] })

@if (ViewData["userId"] != null)
{
    <script>
    getUnOpenedNotificationNumber("@ViewData["userId"]");

    function getUnOpenedNotificationNumber(userId) {

        fetch("@Url.Action("GetNumberOfUnOpenedNotifications", "Notifications")?userId=" + userId)
            .then(res => res.json())
            .then(res => $("#notification").append("&nbsp;"+res.numberUnopened))
    }


    </script>
}

