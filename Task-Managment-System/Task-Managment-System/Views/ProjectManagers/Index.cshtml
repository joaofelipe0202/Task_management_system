@model IEnumerable<Task_Managment_System.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Welcome, @User.Identity.Name</h2><br />

<p>
    @Html.ActionLink("Create New", "CreateNewProject") | @Html.ActionLink("Create New Member", "CreateNewUser")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Creator.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Percentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Complete)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Creator.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.EditorFor(modelItem => item.DateCreated)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Percentage)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Complete)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Priority)
    </td>
    <td>
        @Html.ActionLink("Update", "Update", new { projectId = item.Id }) |
        @Html.ActionLink("Details", "ProjectDetails", new { projectId = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { projectId = item.Id })
    </td>
</tr>
}

</table>
